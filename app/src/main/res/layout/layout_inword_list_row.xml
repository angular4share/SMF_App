<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightgray">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:clickable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="center_vertical"
                    android:text="Vendor"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_vendor"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="0.85"
                    android:text="Shree Mauli Foods"
                    android:textColor="@color/darkgray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.26"
                    android:text="Requirment Dt"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.54"
                    android:text="Product"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:text="Qty"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="25sp"
                android:weightSum="1.0">

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_req_date"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.26"
                    android:text="05/11/2021"
                    android:textColor="@color/darkgray" />

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_product"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.54"
                    android:text="Cow Milk"
                    android:textColor="@color/darkgray" />

                <EditText
                    android:id="@+id/lay_inword_listview_item_ed_qty"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:background="@color/white"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:text="100"
                    android:textColor="@color/darkgray"
                    android:imeOptions="actionDone"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25sp"
                android:weightSum="1">



                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.17"
                    android:gravity="center_vertical"
                    android:text="Leakage"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.17"
                    android:gravity="center_vertical"
                    android:text="Shortfall"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.17"
                    android:gravity="center_vertical"
                    android:text="Westage"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.17"
                    android:gravity="center_vertical"
                    android:text="Total Qty"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.13"
                    android:gravity="center_vertical"
                    android:text="Rate"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center_vertical"
                    android:text="Amount"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:weightSum="1">



                <EditText
                    android:id="@+id/lay_inword_listview_item_ed_leakage"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.17"
                    android:background="@color/white"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:text="0"
                    android:textColor="@color/darkgray"
                    android:imeOptions="actionDone"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/lay_inword_listview_item_ed_shortfall"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.17"
                    android:background="@color/white"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:text="0"
                    android:textColor="@color/darkgray"
                    android:imeOptions="actionDone"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/lay_inword_listview_item_ed_westage"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.17"
                    android:background="@color/white"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:text="0"
                    android:textColor="@color/darkgray"
                    android:imeOptions="actionDone"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_total_qty"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.17"
                    android:gravity="center_vertical"
                    android:text="110"
                    android:textColor="@color/darkgray" />

                <EditText
                    android:id="@+id/lay_inword_listview_item_ed_rate"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.13"
                    android:background="@color/white"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:text="30"
                    android:textColor="@color/darkgray"
                    android:imeOptions="actionDone"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_amt"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.19"
                    android:gravity="center_vertical"
                    android:text="10000"
                    android:textColor="@color/darkgray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25sp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center_vertical"
                    android:text="Payment"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center_vertical"
                    android:text="Bill Date"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.30"
                    android:gravity="center_vertical"
                    android:text="Bill No"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_save"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="1sp"
                    android:layout_marginBottom="1sp"
                    android:layout_weight="0.25"
                    android:background="@drawable/rounded_shape"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="SAVE"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:weightSum="1">

                <EditText
                    android:id="@+id/lay_inword_listview_item_et_payment"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:background="@color/white"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:text="100"
                    android:textColor="@color/darkgray"
                    android:imeOptions="actionDone"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/lay_inword_listview_item_et_bill_date"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@color/white"
                    android:inputType="date"
                    android:focusableInTouchMode="false"
                    android:maxLength="10"
                    android:text=""
                    android:textColor="@color/darkgray"
                    android:imeOptions="actionDone"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/lay_inword_listview_item_ed_bill_no"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.55"
                    android:background="@color/white"
                    android:inputType="textCapWords"
                    android:maxLength="10"
                    android:text=""
                    android:textColor="@color/darkgray"
                    android:imeOptions="actionDone"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>