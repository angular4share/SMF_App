<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightgray">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="3sp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:gravity="center_vertical"
                    android:text="Vendor"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center_vertical"
                    android:text="Bill No"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center_vertical"
                    android:text="Bill Date"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="25sp"
                android:weightSum="1.0">

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_vendor"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:gravity="center_vertical"
                    android:text="Shree Mauli Foods"
                    android:textColor="@color/darkgray" />

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_bill_no"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="000001"
                    android:textColor="@color/darkgray" />

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_bill_date"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="01-01-1900"
                    android:textColor="@color/darkgray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:weightSum="1">


                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.60"
                    android:text="Product"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:text="Bill Qty"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center_vertical"
                    android:text="Accept Qty"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="25sp"
                android:weightSum="1.0">

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_product"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.60"
                    android:text="Cow Milk"
                    android:textColor="@color/darkgray" />

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_challan_qty"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:text="100"
                    android:textColor="@color/darkgray" />


                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_acc_qty"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:text="100"
                    android:textColor="@color/darkgray" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center_vertical"
                    android:text="Shortfall"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:text="UOM"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="center_vertical"
                    android:text="Rate"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center_vertical"
                    android:text="Amount"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center_vertical"
                    android:text="Old Amount"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25sp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_shortfall"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:text="0"
                    android:textColor="@color/darkgray" />


                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_uom"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:text="Ltr"
                    android:textColor="@color/darkgray" />

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_rate"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:text="30"
                    android:textColor="@color/darkgray" />

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_amt"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center_vertical"
                    android:text="3000"
                    android:textColor="@color/darkgray" />

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_old_amount"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="500"
                    android:textColor="@color/darkgray" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.26"
                    android:gravity="center_vertical"
                    android:text="Total Amount"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.49"
                    android:gravity="center_vertical"
                    android:text="Payment Mode"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center_vertical"
                    android:text="Payment Amt"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25sp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_total_balance"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.26"
                    android:text="1500"
                    android:textColor="@color/darkgray" />

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_payment_mode"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.49"
                    android:text="Cash"
                    android:textColor="@color/darkgray" />

                <TextView
                    android:id="@+id/lay_inword_listview_item_txt_payment_amt"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="2000"
                    android:textColor="@color/darkgray" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>