<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.18"
                android:gravity="center_vertical"
                android:text="Product"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.82"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginTop="2dp"
            android:weightSum="1">

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.22"
                android:gravity="center_vertical"
                android:text="Subs Qty"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.22"
                android:gravity="center_vertical"
                android:text="Issue Qty"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:gravity="center_vertical"
                android:text="Rate"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.36"
                android:gravity="center_vertical"
                android:text="Amount"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_subs_Qty"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:text=""
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_issue_qty"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:background="@drawable/et_style"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="6"
                android:text=""
                android:paddingLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/darkgray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_sale_rate"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_sale_amount"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.36"
                android:text=""
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="1">

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center_vertical"
                android:text="Frequency"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.55"
                android:gravity="center_vertical"
                android:text="Time Slot"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:gravity="center_vertical"
                android:text="NextDay Extra Qty"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_frequency"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_time_slot"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.55"
                android:text=""
                android:textSize="15sp" />

            <EditText
                android:id="@+id/ed_extra_qty"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:background="@drawable/et_style"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="6"
                android:text=""
                android:paddingLeft="5dp"
                android:textColor="@color/darkgray"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


